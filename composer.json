{
    "name": "enricodias/email-validator",
    "type": "library",
    "license": "MIT",
    "description": "A simple class to validate emails using respect/validation and validator.pizza",
    "keywords": ["email", "validator", "validator.pizza"],
    "authors": [
        {
            "name": "Enrico Dias",
            "email": "enrico@enricodias.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "guzzlehttp/guzzle": "^6.4",
		"respect/validation": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "enricodias\\": "src/"
        }
    },
    "require-dev": {
        "codacy/coverage": "^1.4",
        "phpmd/phpmd": "^2.7",
        "phpunit/phpunit": ">5.7 <9"
    }
}
